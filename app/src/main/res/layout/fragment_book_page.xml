<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.screens.BookPageFragment"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/baseline_arrow_back_24"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:fillViewport="true">


        <LinearLayout
            android:id="@+id/book_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/book_cover_image"
                android:layout_width="315dp"
                android:layout_height="477dp"
                android:layout_gravity="center"
                tools:src="@drawable/big_cover_book"/>

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginVertical="15dp"
                tools:text="@string/test_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="@string/test_description"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/to_read_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/want_to_read"
                app:cornerRadius="2dp"
                app:strokeColor="?attr/colorOnPrimary"
                app:strokeWidth="2dp"/>



            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:alpha="0.5"
                android:background="?attr/colorOnPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:text="@string/about_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                tools:text="@string/test_description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:text="@string/genre"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:text="@string/publishing_house"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:text="@string/series"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:text="@string/binding"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:text="@string/artist"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:text="@string/translator"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:text="@string/year_publishing"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:alpha="0.5"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        android:text="@string/count_list"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/genre_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_genre"/>

                    <TextView
                        android:id="@+id/publishing_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_publishing_house"/>

                    <TextView
                        android:id="@+id/series_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_series_book"/>

                    <TextView
                        android:id="@+id/binding_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_binding_book"/>

                    <TextView
                        android:id="@+id/artist_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_artist_book"/>

                    <TextView
                        android:id="@+id/translator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_translator_book"/>

                    <TextView
                        android:id="@+id/publishing_year_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_publishing_year_book"/>

                    <TextView
                        android:id="@+id/list_count_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary"
                        tools:text="@string/test_list_count_book"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="20dp"
                android:alpha="0.5"
                android:background="?attr/colorOnPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/comments"
                    android:layout_weight="3"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:text="@string/add_comment"
                    android:maxLines="2"
                    app:cornerRadius="2dp"
                    app:strokeColor="?attr/colorOnPrimary"
                    app:strokeWidth="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>